<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_margin="6dp"
    android:weightSum="1"
    android:id="@+id/lyt_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <com.wma.ozfoodhunter.fonts.TextView_Medium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/itemname"
        android:textStyle="bold"
        android:text="Item 1"/>

    <com.wma.ozfoodhunter.fonts.TextView_Light
        android:layout_marginTop="3dp"
        android:id="@+id/description"
        android:textSize="12sp"
        android:text="Gourmet mini potato , light batter, fried in hign quality oil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.wma.ozfoodhunter.fonts.TextView_Bold
        android:layout_marginTop="3dp"
        android:id="@+id/price"
        android:text="$198"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/added"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_increase"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>