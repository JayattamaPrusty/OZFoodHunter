<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lyt_parent1"
    android:layout_margin="5dp"
    android:weightSum="5">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lyt_parent"
    android:layout_margin="5dp"
    android:weightSum="5">

    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:scaleType="fitXY"
            android:src="@drawable/food_pic1"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="2.5"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.wma.ozfoodhunter.fonts.TextView_Regular
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/restaurant_name"
            android:text="Burger Edge- Myer Center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <com.wma.ozfoodhunter.fonts.TextView_Regular

                android:textColor="@color/black"
                android:id="@+id/location"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                android:text="Brisbane"
                android:gravity="start"
                android:layout_margin="15dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/street_location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delivery"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img1"
            android:scaleType="fitXY"
            android:src="@drawable/deals_offer"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Offer deals "
            android:textSize="15dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <com.wma.ozfoodhunter.fonts.TextView_Regular
            android:textColor="@color/black"
            android:id="@+id/flatoffer"
            android:drawablePadding="5dp"
            android:gravity="start"
            android:textSize="15sp"
            android:text="FLAT 30% OF THAI FLAVOUR RESTAURANT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivery"/>


        <com.wma.ozfoodhunter.fonts.TextView_Regular

            android:textColor="@color/black"
            android:id="@+id/offerdetails"
            android:layout_marginTop="8dp"
            android:textSize="10sp"
            android:text="get 20% OFF on 1st order.Order 7times.8th is free.Spend $50 or more \n and receive afree to papadams(4pcs) the value of $2.50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivery"/>

        <com.wma.ozfoodhunter.fonts.BT_Regular

            android:layout_gravity="end"
            android:id="@+id/offerzone"
            android:text="Order"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:background="@color/button"
            android:textColor="#ffffff"
            android:layout_below="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
</LinearLayout>