<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                        android:id="@+id/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:hint="First name"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="@dimen/register_text_size"
                        android:background="@drawable/rectangle_transparent"/>
                <EditText
                        android:id="@+id/lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:hint="Last name"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="@dimen/register_text_size"
                        android:background="@drawable/rectangle_transparent"/>
                <EditText
                        android:id="@+id/street_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:hint="Street no."
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="@dimen/register_text_size"
                        android:background="@drawable/rectangle_transparent"/>
                <EditText
                        android:id="@+id/street_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:hint="Street name"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="@dimen/register_text_size"
                        android:background="@drawable/rectangle_transparent"/>
                <EditText
                        android:id="@+id/delivery_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Delivery area"
                        android:inputType="text"
                        android:layout_margin="7dp"
                        android:padding="10dp"
                        android:textSize="@dimen/register_text_size"
                        android:background="@drawable/rectangle_transparent"/>
                <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="text"
                        android:layout_margin="7dp"
                        android:padding="10dp"
                        android:textSize="@dimen/register_text_size"
                        android:background="@drawable/rectangle_transparent"/>
                <EditText
                        android:id="@+id/mobileno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile no."
                        android:inputType="text"
                        android:layout_margin="7dp"
                        android:padding="10dp"
                        android:textSize="@dimen/register_text_size"
                        android:background="@drawable/rectangle_transparent"/>
                <EditText
                        android:id="@+id/company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company name"
                        android:inputType="text"
                        android:layout_margin="7dp"
                        android:padding="10dp"
                        android:textSize="@dimen/register_text_size"
                        android:background="@drawable/rectangle_transparent"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="7dp"
                    >

                    <EditText
                        android:layout_weight=".8"

                        android:padding="10dp"
                        android:id="@+id/search"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_transparent"
                        android:cursorVisible="true"
                        android:gravity="center"
                        android:hint="Enter your suburb or postcode"
                        android:singleLine="true"
                        android:textColor="@color/light_gray" />
                    <com.wma.ozfoodhunter.fonts.BT_Regular

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/button"
                        android:layout_toRightOf="@+id/search"
                        android:text="Apply"
                        android:textAlignment="center"
                        android:layout_margin="7dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        />
                </RelativeLayout>

            </LinearLayout>
    </ScrollView>
</RelativeLayout>
