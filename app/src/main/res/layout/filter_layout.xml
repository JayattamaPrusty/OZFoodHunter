<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="enterAlways">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--<include layout="@layout/toolbar_title"/>-->
            </android.support.v7.widget.Toolbar>

        </FrameLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

    <com.wma.ozfoodhunter.fonts.TextView_Bold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.wma.ozfoodhunter.fonts.TextView_Regular
            android:drawablePadding="3dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/relevance_white"
            android:text="Relevance"
            android:textColor="@color/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <com.wma.ozfoodhunter.fonts.TextView_Regular
            android:drawablePadding="3dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/rating_white"
            android:text="Rating"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@color/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Regular" />

        <com.wma.ozfoodhunter.fonts.TextView_Regular
            android:drawablePadding="3dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/rating_white"
            android:text="Deliver/Pick Up Time"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@color/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <com.wma.ozfoodhunter.fonts.TextView_Regular
            android:drawablePadding="3dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/rating_white"
            android:text="DeliveryFee"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@color/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <com.wma.ozfoodhunter.fonts.TextView_Regular
            android:drawablePadding="3dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/rating_white"
            android:text="Minimum Order"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@color/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.wma.ozfoodhunter.fonts.TextView_Bold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <com.wma.ozfoodhunter.fonts.TextView_Medium
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuisines"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:id="@+id/all"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textColor="@color/green"
            android:text="All Cuisines"
            android:background="@drawable/rectangle_edge_white"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="33dp" />
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:id="@+id/indian"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/green"
            android:layout_margin="2dp"
            android:text="Indian"
            android:background="@drawable/rectangle_edge_white"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="33dp" />
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:id="@+id/asian"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/green"
            android:layout_margin="2dp"
            android:text="Asian"
            android:background="@drawable/rectangle_edge_white"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="33dp" />
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:id="@+id/japanese"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/green"
            android:layout_margin="2dp"
            android:text="Japanese"
            android:background="@drawable/rectangle_edge_white"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="33dp" />
    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/nepalese"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textColor="@color/green"
        android:text="Nepalese"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/burger"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/green"
        android:layout_margin="2dp"
        android:text="Burger"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/pizza"
        android:gravity="center"
        android:textColor="@color/green"
        android:layout_margin="2dp"
        android:text="Pizza"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/italian"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/green"
        android:layout_margin="2dp"
        android:text="Italian"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/vietnamese"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textColor="@color/green"
        android:text="Vietnamese"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/thai"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/green"
        android:layout_margin="2dp"
        android:text="Thai"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/mexican"
        android:gravity="center"
        android:textColor="@color/green"
        android:layout_margin="2dp"
        android:text="Mexican"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/chinese"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/green"
        android:layout_margin="2dp"
        android:text="Chinese"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/pakistani"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textColor="@color/green"
        android:text="Pakistani"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/pasta"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/green"
        android:layout_margin="2dp"
        android:text="Pasta"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:id="@+id/kebab"
        android:gravity="center"
        android:textColor="@color/green"
        android:layout_margin="2dp"
        android:text="Kebab"
        android:background="@drawable/rectangle_edge_white"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="33dp" />
</LinearLayout>
    <com.wma.ozfoodhunter.fonts.TextView_Medium
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specials"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:id="@+id/venues"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textColor="@color/green"
            android:text="All Venues"
            android:background="@drawable/rectangle_edge_white"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="33dp" />
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:id="@+id/first"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/green"
            android:layout_margin="2dp"
            android:text="First Order"
            android:background="@drawable/rectangle_edge_white"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="33dp" />
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:id="@+id/loyalty"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/green"
            android:layout_margin="2dp"
            android:text="Loyality"
            android:background="@drawable/rectangle_edge_white"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="33dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:id="@+id/min"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textColor="@color/green"
            android:text="Minimum Spend"
            android:background="@drawable/rectangle_edge_white"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="33dp" />
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:id="@+id/meal"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/green"
            android:layout_margin="2dp"
            android:text="Meal Deals"
            android:background="@drawable/rectangle_edge_white"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="33dp" />
    </LinearLayout>

    <com.wma.ozfoodhunter.fonts.BT_Regular
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:text="10 Restaurants found"
        android:background="@drawable/rectangle_edge_green"
        android:layout_width="match_parent"
        android:textSize="10sp"
        android:layout_height="33dp" />

</LinearLayout>
</android.support.v4.widget.NestedScrollView>

</LinearLayout>